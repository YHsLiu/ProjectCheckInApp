<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Teacher.TeacherEnterClassFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_rollcall"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:layout_marginBottom="36dp"
            android:src="@mipmap/btn_rollcall"
            app:layout_constraintBottom_toTopOf="@+id/btn_stuList"
            app:layout_constraintEnd_toStartOf="@+id/btn_lottery"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btn_lottery"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:layout_marginEnd="44dp"
            android:src="@mipmap/btn_lottery"
            app:layout_constraintBottom_toBottomOf="@+id/btn_rollcall"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/btn_stuList"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="44dp"
            android:src="@mipmap/btn_stulist"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_record"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btn_record"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:layout_marginEnd="44dp"
            android:src="@mipmap/btn_record"
            app:layout_constraintBottom_toBottomOf="@+id/btn_stuList"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txt_className"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droid_sans_fallback_full"
            android:text="TextView"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_lottery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>