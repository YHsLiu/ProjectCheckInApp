<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_tec_main">

    <fragment
        android:id="@+id/nav_stdMainPage"
        android:name="abc.project.projectcheckinapp.ui.Student.StudentMainPageFragment"
        android:label="@string/menu_stdMainPage"
        tools:layout="@layout/fragment_studentmainpage" >
        <action
            android:id="@+id/action_nav_stdMainPage_to_classTableFragment"
            app:destination="@id/nav_classTable" />
    </fragment>

    <fragment
        android:id="@+id/nav_tec_main"
        android:name="abc.project.projectcheckinapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_EnterClass"
        android:name="abc.project.projectcheckinapp.ui.Student.EnterClassFragment"
        android:label="@string/menu_EnterClass"
        tools:layout="@layout/fragment_enterclass" >
        <action
            android:id="@+id/action_nav_EnterClass_to_nav_InputCourseCode"
            app:destination="@id/nav_tec_newclass" />
    </fragment>

    <fragment
        android:id="@+id/nav_tec_newclass"
        android:name="abc.project.projectcheckinapp.ui.Student.InputCourseCodeFragment"
        android:label="@string/menu_InputCourseCode"
        tools:layout="@layout/fragment_inputcoursecode">

    </fragment>

    <fragment
        android:id="@+id/nav_classTable"
        android:name="abc.project.projectcheckinapp.ui.Student.ClassTableFragment"
        android:label="ClassTableFragment" >
        <action
            android:id="@+id/action_classTableFragment_to_nav_EnterClass"
            app:destination="@id/nav_EnterClass" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="abc.project.projectcheckinapp.ui.home.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_nav_stdMainPage"
            app:destination="@id/nav_stdMainPage" />
        <action
            android:id="@+id/action_loginFragment_to_teacherMainFragment"
            app:destination="@id/teacherMainFragment" />
    </fragment>
    <fragment
        android:id="@+id/teacherMainFragment"
        android:name="abc.project.projectcheckinapp.ui.Teacher.TeacherMainFragment"
        android:label="fragment_teacher_main"
        tools:layout="@layout/fragment_teacher_main" >
        <action
            android:id="@+id/action_teacherMainFragment_to_newClassFragment"
            app:destination="@id/newClassFragment" />
        <action
            android:id="@+id/action_teacherMainFragment_to_teacherEnterClassFragment"
            app:destination="@id/teacherEnterClassFragment" />
    </fragment>
    <fragment
        android:id="@+id/newClassFragment"
        android:name="abc.project.projectcheckinapp.ui.Teacher.NewClassFragment"
        android:label="fragment_new_class"
        tools:layout="@layout/fragment_new_class" />
    <fragment
        android:id="@+id/teacherEnterClassFragment"
        android:name="abc.project.projectcheckinapp.ui.Teacher.TeacherEnterClassFragment"
        android:label="fragment_teacher_enter_class"
        tools:layout="@layout/fragment_teacher_enter_class" />

</navigation>