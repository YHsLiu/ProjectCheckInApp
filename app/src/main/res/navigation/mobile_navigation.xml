<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_stdMainPage">

    <fragment
        android:id="@+id/nav_stdMainPage"
        android:name="abc.project.projectcheckinapp.ui.Student.StudentMainPageFragment"
        android:label="@string/menu_stdMainPage"
        tools:layout="@layout/fragment_studentmainpage" >
        <action
            android:id="@+id/action_nav_stdMainPage_to_classTableFragment"
            app:destination="@id/nav_classTable" />
        <action
            android:id="@+id/action_nav_stdMainPage_to_nav_EnterClass"
            app:destination="@id/nav_EnterClass" />
        <action
            android:id="@+id/action_nav_stdMainPage_to_reviseStdDataFragment"
            app:destination="@id/reviseStdDataFragment" />
        <action
            android:id="@+id/action_nav_stdMainPage_to_inputCourseCodeFragment"
            app:destination="@id/nav_inputCourseCode" />
        <action
            android:id="@+id/action_nav_stdMainPage_to_loginActivity"
            app:destination="@id/loginActivity" />
    </fragment>

    <fragment
        android:id="@+id/nav_EnterClass"
        android:name="abc.project.projectcheckinapp.ui.Student.EnterClassFragment"
        android:label="@string/menu_EnterClass"
        tools:layout="@layout/fragment_enterclass" >
        <action
            android:id="@+id/action_nav_EnterClass_to_stdRollCallFragment"
            app:destination="@id/nav_stdRollCall" />
        <action
            android:id="@+id/action_nav_EnterClass_to_stdRecordFragment"
            app:destination="@id/stdRecordFragment" />
        <action
            android:id="@+id/action_nav_EnterClass_to_stdBulletinFragment"
            app:destination="@id/stdBulletinFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_classTable"
        android:name="abc.project.projectcheckinapp.ui.Student.ClassTableFragment"
        android:label="ClassTableFragment"
        tools:layout="@layout/fragment_classtable"/>
    <fragment
        android:id="@+id/reviseStdDataFragment"
        android:name="abc.project.projectcheckinapp.ui.Student.ReviseStdDataFragment"
        android:label="fragment_revise_std_data"
        tools:layout="@layout/fragment_revise_std_data" />
    <fragment
        android:id="@+id/nav_inputCourseCode"
        android:name="abc.project.projectcheckinapp.ui.Student.InputCourseCodeFragment"
        android:label="InputCourseCodeFragment"
        tools:layout="@layout/fragment_inputcoursecode"/>
    <fragment
        android:id="@+id/nav_stdRollCall"
        android:name="abc.project.projectcheckinapp.ui.Student.StdRollCallFragment"
        android:label="fragment_std_roll_call"
        tools:layout="@layout/fragment_std_roll_call" />
    <fragment
        android:id="@+id/stdRecordFragment"
        android:name="abc.project.projectcheckinapp.ui.Student.StdRecordFragment"
        android:label="fragment_std_record"
        tools:layout="@layout/fragment_std_record" />
    <fragment
        android:id="@+id/stdBulletinFragment"
        android:name="abc.project.projectcheckinapp.ui.Student.StdBulletinFragment"
        android:label="fragment_std_bulletin"
        tools:layout="@layout/fragment_std_bulletin" />

</navigation>